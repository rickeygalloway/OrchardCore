@model AdminNodeEditViewModel

<h1>@RenderTitleSegments(T["Create Node"])</h1>

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="Create" method="post">
    @await DisplayAsync(Model.Editor)

    <input type="hidden" asp-for="AdminTreeId" />
    <input type="hidden" asp-for="AdminNodeId" />
    <input type="hidden" asp-for="AdminNodeType" />

    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Create"]</button>
            <a class="btn btn-secondary"
               asp-route-controller="Node"
               asp-route-action="List"
               asp-route-id="@Model.AdminTreeId">@T["Cancel"]</a>
        </div>
    </fieldset>
</form>
